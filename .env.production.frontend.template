# =================================================
# FRONTEND PRODUCTION ENVIRONMENT VARIABLES
# =================================================
# 
# SECURITY WARNING:
# - Only include NEXT_PUBLIC_* variables here
# - NEVER add API secrets to frontend .env
# - Public keys only (Stripe publishable, PayPal client ID)
#
# Copy this file to: frontend/.env
# Fill in the values with your actual credentials
# =================================================

# Application URLs
NEXT_PUBLIC_API_URL=https://onelastai.co
NEXT_PUBLIC_APP_URL=https://onelastai.co
NEXT_PUBLIC_BASE_URL=https://onelastai.co

# Feature Flags
NEXT_PUBLIC_ENABLE_MULTILINGUAL=true
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_MARKETPLACE=true
NEXT_PUBLIC_ENABLE_GAMIFICATION=true

# Payment Integration (Public Keys Only!)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY
NEXT_PUBLIC_PAYPAL_CLIENT_ID=YOUR_PAYPAL_CLIENT_ID

# Analytics (Optional)
NEXT_PUBLIC_GOOGLE_ANALYTICS=UA-XXXXXXXXX-X
NEXT_PUBLIC_GOOGLE_TAG_MANAGER=GTM-XXXXXXX
NEXT_PUBLIC_HOTJAR_ID=YOUR_HOTJAR_ID
NEXT_PUBLIC_MIXPANEL_TOKEN=YOUR_MIXPANEL_TOKEN

# Environment
NEXT_PUBLIC_ENV=production

# =================================================
# END OF FRONTEND ENVIRONMENT VARIABLES
# =================================================

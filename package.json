{
  "name": "ai-app-monorepo",
  "version": "1.0.0",
  "type": "module",
  "description": "AI-powered web application with frontend and backend services",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend:3100\" \"npm run dev:backend:watch\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:frontend:3100": "cd frontend && npm run dev:3100",
    "dev:backend": "cd backend && npm run dev",
    "dev:backend:watch": "cd backend && npm run dev:watch",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "start": "concurrently \"npm run start:frontend\" \"npm run start:backend\"",
    "start:frontend": "cd frontend && npm run start",
    "start:backend": "cd backend && npm run start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "clean": "rimraf frontend/.next frontend/node_modules backend/.next backend/node_modules",
    "lint": "cd frontend && npm run lint && cd ../backend && npm run lint"
  },
  "devDependencies": {
    "@types/uuid": "^10.0.0",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "uuid": "^13.0.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.0",
    "socket.io": "^4.6.1"
  }
}

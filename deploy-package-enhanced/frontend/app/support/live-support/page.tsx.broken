'use client'

import { useState, useRef, useEffect } from 'react'
import { PaperAirplaneIcon, PaperClipIcon, XMarkIcon, ChatBubbleBottomCenterTextIcon, DocumentTextIcon, UserIcon, CpuChipIcon, CheckCircleIcon, ExclamationTriangleIcon } from '@heroicons/react/24/outline'
import { useAuth } from '../../../lib/auth-context'
import Link from 'next/link'
import { v4 as uuidv4 } from 'uuid'

interface Message {
  id: string
  type: 'user' | 'assistant' | 'system'
  content: string
  timestamp: Date
  isTyping?: boolean
  attachment?: {
    name: string
    type: string
    size: number
  }
  classification?: {
    category: string
    severity: 'P1' | 'P2' | 'P3'
    suggestedSLA: string
  }
  metadata?: {
    provider?: string
    latency?: number
    kbArticlesFound?: number
  }
}

interface UserProfile {
  id: string
  name: string
  email: string
  phone?: string
  plan: 'free' | 'pro' | 'enterprise'
  subscriptionStatus: 'active' | 'inactive' | 'cancelled' | 'past_due'
}

interface SupportSession {
  id: string
  userId: string
  startTime: Date
  status: 'active' | 'escalated' | 'resolved'
  ticketId?: string
  feedbackGiven?: boolean
}

interface MessageFeedback {
  messageId: string
  rating: 'helpful' | 'not_helpful'
  comment?: string
  timestamp: Date
}

interface QuickReply {
  text: string
  category: string
  icon: string
}


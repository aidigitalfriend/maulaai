              </div>
            </div>
          </div>

          {/* Messages Area */}
          <div 
            ref={chatContainerRef}
            className="h-96 md:h-[500px] overflow-y-auto p-6 bg-gray-50"
            style={{ scrollBehavior: 'smooth' }}
          >
            <div className="space-y-4">
              {messages.map((message) => (
                <div
                  key={message.id}
                  className={`flex ${message.type === 'user' ? 'justify-end' : 'justify-start'}`}
                >
                  <div className={`flex items-start space-x-3 max-w-xs md:max-w-md lg:max-w-lg ${
                    message.type === 'user' ? 'flex-row-reverse space-x-reverse' : ''
                  }`}>
                    {/* Avatar */}
                    <div className={`flex-shrink-0 w-8 h-8 rounded-full flex items-center justify-center ${
                      message.type === 'user' 
                        ? 'bg-brand-600' 
                        : 'bg-gradient-to-r from-accent-500 to-brand-500'
                    }`}>
                      {message.type === 'user' ? (
                        <UserIcon className="w-4 h-4 text-white" />
                      ) : (
                        <CpuChipIcon className="w-4 h-4 text-white" />
                      )}
                    </div>

                    {/* Message Bubble */}
                    <div className={`px-4 py-3 rounded-2xl ${
                      message.type === 'user'
                        ? 'bg-brand-600 text-white'
                        : 'bg-white border border-neural-200'
                    }`}>
                      {message.isTyping ? (
                        <div className="flex items-center space-x-1">
                          <div className="flex space-x-1">
                            <div className="w-2 h-2 bg-neural-400 rounded-full animate-bounce" style={{ animationDelay: '0ms' }}></div>
                            <div className="w-2 h-2 bg-neural-400 rounded-full animate-bounce" style={{ animationDelay: '150ms' }}></div>
                            <div className="w-2 h-2 bg-neural-400 rounded-full animate-bounce" style={{ animationDelay: '300ms' }}></div>
                          </div>
                          <span className="text-neural-500 text-sm ml-2">AI is typing...</span>
                        </div>
                      ) : (
                        <>
                          {message.attachment && (
                            <div className="mb-2 p-2 bg-neural-100 rounded-lg border border-neural-200">
                              <div className="flex items-center space-x-2">
                                <DocumentTextIcon className="w-4 h-4 text-neural-600" />
                                <span className="text-sm text-neural-700">{message.attachment.name}</span>
                                <span className="text-xs text-neural-500">({formatFileSize(message.attachment.size)})</span>
                              </div>
                            </div>
                          )}
                          <p className={`text-sm ${message.type === 'user' ? 'text-white' : 'text-neural-800'}`}>
                            {message.content}
                          </p>
                        </>
                      )}
                      <div className="flex items-center justify-between mt-1">
                        <p className={`text-xs ${
        </div>

        {/* Feedback Modal */}
        {showFeedback && !feedbackSubmitted && (
          <div className="fixed inset-0 bg-black/50 flex items-center justify-center p-4 z-50">
            <div className="bg-white rounded-xl shadow-2xl max-w-md w-full p-6">
              <div className="text-center mb-6">
                <div className="bg-gradient-to-r from-brand-600 to-accent-500 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
                  <span className="text-white text-xl">üí¨</span>
                </div>
                <h3 className="text-xl font-bold text-neural-800 mb-2">
                  How was your support experience?
                </h3>
                <p className="text-neural-600">
                  Your feedback helps us improve our service
                </p>
              </div>

              <div className="space-y-4">
                <div className="flex justify-center space-x-4">
                  <button
                    onClick={() => {
                      submitFeedback(messages[messages.length - 1]?.id || '', 'helpful')
                      setShowFeedback(false)
                    }}
                    className="flex flex-col items-center p-4 border-2 border-green-200 rounded-lg hover:border-green-400 hover:bg-green-50 transition-colors group"
                  >
                    <span className="text-3xl mb-2 group-hover:scale-110 transition-transform">üëç</span>
                    <span className="text-green-700 font-medium">Helpful</span>
                  </button>
                  
                  <button
                    onClick={() => {
                      submitFeedback(messages[messages.length - 1]?.id || '', 'not_helpful')
                      setShowFeedback(false)
                    }}
                    className="flex flex-col items-center p-4 border-2 border-red-200 rounded-lg hover:border-red-400 hover:bg-red-50 transition-colors group"
                  >
                    <span className="text-3xl mb-2 group-hover:scale-110 transition-transform">üëé</span>
                    <span className="text-red-700 font-medium">Not Helpful</span>
                  </button>
                </div>

                <div>
                  <textarea
                    placeholder="Any additional comments? (optional)"
                    className="w-full px-3 py-2 border border-neural-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-brand-500 resize-none"
                    rows={3}
                    id="feedback-comment"
                  />
                </div>

                <div className="flex space-x-3">
                  <button
                    onClick={() => {
                      const comment = (document.getElementById('feedback-comment') as HTMLTextAreaElement)?.value
                      submitFeedback(messages[messages.length - 1]?.id || '', 'helpful', comment)
                      setShowFeedback(false)
                    }}
                    className="flex-1 py-2 px-4 bg-gradient-to-r from-brand-600 to-accent-500 text-white rounded-lg font-medium hover:from-brand-700 hover:to-accent-600 transition-colors"
                  >
                    Submit Feedback
                  </button>
                  
                  <button
                    onClick={() => setShowFeedback(false)}
                    className="py-2 px-4 border border-neural-300 text-neural-700 rounded-lg font-medium hover:bg-neural-50 transition-colors"
                  >
                    Skip
                  </button>
                </div>
              </div>
            </div>
          </div>
        )}

        {/* Feedback Success Message */}
        {feedbackSubmitted && (
          <div className="fixed bottom-4 right-4 bg-green-100 border border-green-200 rounded-lg p-4 shadow-lg">
            <div className="flex items-center space-x-2">
              <CheckCircleIcon className="w-5 h-5 text-green-600" />
              <span className="text-green-800 font-medium">Thank you for your feedback!</span>
            </div>
          </div>
        )}

        {/* End Conversation Button - Show after some messages */}
        {messages.length > 3 && session?.status === 'active' && (
          <div className="mt-6 text-center">
            <button
              onClick={handleConversationEnd}
              className="text-neural-500 hover:text-neural-700 text-sm font-medium"
            >
              End conversation and provide feedback
            </button>
          </div>
        )}
      </div>
    </div>
  )
}                       
                        {/* Show metadata for assistant messages */}
                        {message.type === 'assistant' && message.metadata && (
                          <div className="flex items-center space-x-2 text-xs text-neural-400">
                            {message.metadata.provider && (
                              <span title={`Provider: ${message.metadata.provider}`}>
                                ü§ñ
                              </span>
                            )}
                            {message.metadata.latency && (
                              <span title={`Response time: ${message.metadata.latency}ms`}>
                                ‚ö° {message.metadata.latency}ms
                              </span>
                            )}
                            {message.metadata.kbArticlesFound && message.metadata.kbArticlesFound > 0 && (
                              <span title={`${message.metadata.kbArticlesFound} KB articles found`}>
                                üìö {message.metadata.kbArticlesFound}
                              </span>
                            )}
                          </div>
                        )}
                      </div>

                      {/* Show classification info for support messages */}
                      {message.classification && (
                        <div className="mt-2 text-xs">
                          <div className={`inline-flex items-center px-2 py-1 rounded-full ${
                            message.classification.severity === 'P1' ? 'bg-red-100 text-red-800' :
                            message.classification.severity === 'P2' ? 'bg-yellow-100 text-yellow-800' :
                            'bg-blue-100 text-blue-800'
                          }`}>
                            {message.classification.category} ‚Ä¢ {message.classification.severity} ‚Ä¢ SLA: {message.classification.suggestedSLA}
                          </div>
                        </div>
                      )}
                    </div>
                  </div>
                </div>
              ))}
            </div>
            <div ref={messagesEndRef} />
          </div>

          {/* Quick Reply Buttons - Show only when no active conversation */}
          {messages.length <= 1 && (
            <div className="px-6 py-4 bg-gray-50 border-t border-neural-200">
              <p className="text-sm text-neural-600 mb-3">Quick help topics:</p>
              <div className="flex flex-wrap gap-2">
                {quickReplies.map((reply, index) => (
                  <button
                    key={index}
                    onClick={() => handleQuickReply(reply)}
                    className="inline-flex items-center px-3 py-2 text-sm bg-white border border-neural-300 rounded-full hover:bg-brand-50 hover:border-brand-300 transition-colors"
                  >
                    <span className="mr-1">{reply.icon}</span>
                    {reply.text}
                  </button>
                ))}
              </div>
            </div>
          )}

          {/* Input Area */}
          <div className="p-6 bg-white border-t border-neural-200">
            {/* File Upload Preview */}
            {uploadedFile && (
              <div className="mb-4 p-3 bg-blue-50 border border-blue-200 rounded-lg">
                <div className="flex items-center justify-between">
                  <div className="flex items-center space-x-2">
                    <DocumentTextIcon className="w-5 h-5 text-blue-600" />
                    <div>
                      <p className="text-sm font-medium text-blue-800">{uploadedFile.name}</p>
                      <p className="text-xs text-blue-600">{formatFileSize(uploadedFile.size)}</p>
                    </div>
                  </div>
                  <button
                    onClick={removeFile}
                    className="text-blue-600 hover:text-blue-800"
                  >
                    <XMarkIcon className="w-4 h-4" />
                  </button>
                </div>
              </div>
            )}

            {/* Input Row */}
            <div className="flex items-end space-x-3">
              {/* File Upload Button */}
              <button
                onClick={() => fileInputRef.current?.click()}
                className="flex-shrink-0 p-3 text-neural-600 hover:text-brand-600 hover:bg-brand-50 rounded-full transition-colors"
                title="Upload document"
              >
                <PaperClipIcon className="w-5 h-5" />
              </button>
              
              <input
                type="file"
                ref={fileInputRef}
                onChange={handleFileUpload}
                accept=".pdf,.doc,.docx,.txt"
                className="hidden"
              />

              {/* Message Input */}
              <div className="flex-1">
                <textarea
                  value={inputMessage}
                  onChange={(e) => setInputMessage(e.target.value)}
                  onKeyPress={handleKeyPress}
                  placeholder="Type your message here... (Press Enter to send)"
                  className="w-full px-4 py-3 border border-neural-300 rounded-xl focus:outline-none focus:ring-2 focus:ring-brand-500 focus:border-transparent resize-none"
                  rows={1}
                  style={{ minHeight: '48px', maxHeight: '120px' }}
                />
              </div>

              {/* Send Button */}
              <button
                onClick={sendMessage}
                disabled={(!inputMessage.trim() && !uploadedFile) || isLoading}
                className={`flex-shrink-0 p-3 rounded-full transition-all duration-200 ${
                  (!inputMessage.trim() && !uploadedFile) || isLoading
                    ? 'bg-gray-300 text-gray-500 cursor-not-allowed'
                    : 'bg-gradient-to-r from-brand-600 to-accent-500 text-white hover:from-brand-700 hover:to-accent-600 transform hover:scale-105'
                }`}
              >
                <PaperAirplaneIcon className="w-5 h-5" />
              </button>
            </div>

            {/* Help Text */}
            <div className="mt-3 text-xs text-neural-500 flex items-center justify-between">
              <span>üí° Tip: You can upload PDF, Word, or text files for analysis</span>
              <span>Press Enter to send, Shift+Enter for new line</span>
            </div>
          </div>
        </div>

        {/* Features Info */}
        <div className="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
          <div className="bg-white p-6 rounded-xl shadow-lg border border-neural-200 text-center">
            <div className="bg-blue-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
              <ChatBubbleBottomCenterTextIcon className="w-6 h-6 text-blue-600" />
            </div>
            <h3 className="font-semibold text-neural-800 mb-2">Real-time Chat</h3>
            <p className="text-neural-600 text-sm">
              Get instant responses to your questions about our services and website
            </p>
          </div>

          <div className="bg-white p-6 rounded-xl shadow-lg border border-neural-200 text-center">
            <div className="bg-green-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
              <DocumentTextIcon className="w-6 h-6 text-green-600" />
            </div>
            <h3 className="font-semibold text-neural-800 mb-2">Document Analysis</h3>
            <p className="text-neural-600 text-sm">
              Upload documents and get AI-powered analysis and insights
            </p>
          </div>

          <div className="bg-white p-6 rounded-xl shadow-lg border border-neural-200 text-center">
            <div className="bg-purple-100 w-12 h-12 rounded-full flex items-center justify-center mx-auto mb-4">
              <CpuChipIcon className="w-6 h-6 text-purple-600" />
            </div>
            <h3 className="font-semibold text-neural-800 mb-2">AI-Powered</h3>
            <p className="text-neural-600 text-sm">
              Powered by advanced AI to provide accurate and helpful responses
            </p>
          </div>
        </div>
      </div>
    </div>
  )
}
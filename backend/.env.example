# =============================================================================
# BACKEND ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# This file serves as a template for all required environment variables

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=3001
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your_super_secure_jwt_secret_change_in_production
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# AI MODEL API KEYS
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here
GEMINI_API_KEY=your_gemini_api_key_here
COHERE_API_KEY=your_cohere_api_key_here

# =============================================================================
# TRANSLATION & LANGUAGE SERVICES
# =============================================================================
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here
GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key_here
DEEPL_API_KEY=your_deepl_api_key_here

# =============================================================================
# VOICE & AUDIO SERVICES
# =============================================================================
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# =============================================================================
# EMAIL CONFIGURATION (SendGrid)
# =============================================================================
SENDGRID_API_KEY=your_sendgrid_api_key_here
EMAIL_FROM=noreply@onelastai.co

# Legacy SMTP (optional - replaced by SendGrid)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USER=onelastai2.0@gmail.com
MAIL_PASS=your_gmail_app_password_here
MAIL_FROM=onelastai2.0@gmail.com
MAIL_TO=onelastai2.0@gmail.com

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
IPINFO_API_TOKEN=your_ipinfo_api_token_here
RUNWAYML_API_KEY=your_runwayml_api_key_here

# =============================================================================
# LOCAL AI MODELS
# =============================================================================
# Ollama Configuration (for local models)
OLLAMA_ENDPOINT=http://localhost:11434

# =============================================================================
# WEBSOCKET & NETWORKING
# =============================================================================
SOCKET_PORT=3001

# =============================================================================
# DATABASE CONFIGURATION - PostgreSQL
# =============================================================================
# PostgreSQL connection string (AWS RDS recommended for production)
DATABASE_URL=postgresql://username:password@host:5432/database?schema=public
POSTGRES_HOST=your-rds-endpoint.amazonaws.com
POSTGRES_PORT=5432
POSTGRES_USER=onelastai
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=onelastai

# Redis connection string (Redis Cloud or AWS ElastiCache)
REDIS_URL=redis://default:password@your-redis-host:6379

# =============================================================================
# FILE STORAGE & UPLOADS
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_s3_bucket_name_here
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# =============================================================================
# FEATURE FLAGS & CONFIGURATION
# =============================================================================
ENABLE_MULTILINGUAL=true
ENABLE_VOICE_FEATURES=true
ENABLE_PDF_PROCESSING=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_RATE_LIMITING=true
ENABLE_LOGGING=true
DEFAULT_LANGUAGE=en
FALLBACK_LANGUAGE=en
LANGUAGE_DETECTION_CONFIDENCE_THRESHOLD=0.7
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png

# =============================================================================
# RATE LIMITING & SECURITY
# =============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_MAX_REQUESTS_PER_IP=50
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002
ENABLE_HELMET=true
ENABLE_CORS=true

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================
GA_MEASUREMENT_ID=your_ga_measurement_id_here
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_ENDPOINT=your_analytics_endpoint_here

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================
DEBUG_MODE=false
LOG_LEVEL=info
VERBOSE_LOGGING=false
ENABLE_DEV_ROUTES=true
ENABLE_API_DOCS=true
ENABLE_HEALTH_CHECK=true

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_SECRET=your_webhook_secret_here
NOTIFICATION_WEBHOOK_URL=your_notification_webhook_url_here

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=System is under maintenance. Please try again later.